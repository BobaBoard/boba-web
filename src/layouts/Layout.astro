<style is:global>

	:root {	
		--body-color: white;
		--bg-color: hsl(0, 0%, 7%);
		--accent-light: hsl(207, 89%, 54%);
		--accent-dark: ;
	}

	*,
	*::before,
	*::after {
		box-sizing: border-box;
	}

	html {
		color: var(--body-color);
		background: var(--bg-color);
		margin: 0;
		padding: 0;

	}

	body {
		font-size: 1.125rem;
		font-family: 'Roboto', system-ui, sans-serif;
		line-height: 1.6;
	}

	a {
		color: var(--accent-light);
		text-decoration: none;
	}

	a:hover {
		text-decoration: underline;
	}

	img {
		display: block;
		max-width: 100%;
		aspect-ratio: 1/1;
	}

	svg {
		display: block;
		margin: 0;
		padding: 0;
		position: relative;
		margin: 2.25em auto;
		width: 150px;
	}

	h1,
	h2 {
		font-family: 'Poppins';
	}

	nav {
		display: flex;
		flex-direction: column;
		margin: 0;
		width: 100%;
		font-family: 'Poppins';
	}

	ul {
		display: flex;
		flex-direction: column;
		margin: 0;
		font-size: 1.5rem;
		text-align: center;
		list-style: none;
	}

	nav li {
		margin-bottom: 0.625em;
	}

	nav li a {
		color: var(--body-color);
		text-decoration: none;
	}

	nav li a:hover {
		color: var(--accent-light);
		text-decoration: none;
	}

	.banner {
		background-color: #222;
		/* border: 1px solid red; */
		margin: 0;
		padding: 0.5em;
		width: 100%;
		top: 0;
		font-size: 0.75em;
		text-align: center;
	}


@media all and (min-width: 700px) {

	nav {
		flex-direction: row;
		flex-wrap: wrap;
		align-items: center;
		justify-content: space-around;
	}

	.logo {
		
	}

	nav ul {
		flex-direction: row;
	}

	nav ul li a {
		margin-right: 1.5em;
	}
}

</style>
